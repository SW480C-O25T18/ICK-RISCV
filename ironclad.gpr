project Ironclad is
   type Arch_Name is
      ("riscv64-limine",
       "x86_64-limine");

   Arch : Arch_Name := "riscv64-limine";
   Ada_Flags        := "-g -O2 -pipe -gnaty -Wall -Wextra";
   Asm_Flags        := "-g -O2 -pipe -Wall";
   Linker_Flags     := "-g -O2 -pipe -Wall";

   for Source_Dirs use
      ("/home/sean/capstone/ICK-RISCV-Context/source/arch/" & Arch,
       "/home/sean/capstone/ICK-RISCV-Context/source/arch",
       "/home/sean/capstone/ICK-RISCV-Context/source/cryptography",
       "/home/sean/capstone/ICK-RISCV-Context/source/devices",
       "/home/sean/capstone/ICK-RISCV-Context/source/ipc",
       "/home/sean/capstone/ICK-RISCV-Context/source/lib",
       "/home/sean/capstone/ICK-RISCV-Context/source/memory",
       "/home/sean/capstone/ICK-RISCV-Context/source/networking",
       "/home/sean/capstone/ICK-RISCV-Context/source/userland",
       "/home/sean/capstone/ICK-RISCV-Context/source/vfs",
       "/home/sean/capstone/ICK-RISCV-Context/source");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("main.adb");
   for Languages use ("Ada", "Asm_Cpp");
   for Create_Missing_Dirs use "True";

   package Builder is
      for Executable ("main.adb") use "ironclad";
   end Builder;

   package Compiler is
      Base_Ada_Switches := Split (Ada_Flags, " ") &
         ("-fno-stack-protector", "-fno-stack-check",
          "-fdata-sections", "-ffunction-sections",
          "-gnateDIroncladName=""" & "Ironclad"      & """",
          "-gnateDVersion="""      & "g2867970"   & """",
          "-gnateDBugSite="""      & "https://ironclad.nongnu.org/usersupport.html" & """",
          "-gnateDArchName="""     & Arch                  & """",
          "-ffile-prefix-map="     & "/home/sean/capstone/ICK-RISCV-Context"            & "=.",
          "-gnateDALLOCONLY="      & "False");
      Base_Asm_Switches := Split (Asm_Flags, " ") &
         ("-ffile-prefix-map=" & "/home/sean/capstone/ICK-RISCV-Context" & "=.");

      case Arch is
         when "riscv64-limine" =>
            for Switches ("Ada") use Base_Ada_Switches & (
               "-fno-pie", "-fno-pic", "-mno-relax",
               "-march=rv64imac_zicsr_zifencei", "-mabi=lp64"
            );
            for Switches ("Asm") use Base_Ada_Switches & (
               "-fno-pie", "-fno-pic", "-mno-relax",
               "-march=rv64imac_zicsr_zifencei", "-mabi=lp64"
            );
         when "x86_64-limine" =>
            for Switches ("Ada") use Base_Ada_Switches &
               ("-fno-pie", "-fno-pic", "-mgeneral-regs-only", "-mno-red-zone",
                "-mcmodel=kernel", "-fcf-protection");
            for Switches ("Asm_Cpp") use Base_Asm_Switches &
               ("-fno-pie", "-fno-pic", "-mno-red-zone", "-mcmodel=kernel");
      end case;

      for Local_Configuration_Pragmas use "/home/sean/capstone/ICK-RISCV-Context/source/pragmas.adc";
   end Compiler;

   package Linker is
      Base_Link_Switches := Split (Linker_Flags, " ") &
         ("-T/home/sean/capstone/ICK-RISCV-Context/source/arch/" & Arch & "/linker.ld", "-nostdlib",
          "-Llibgnat-hack", "-Wl,-gc-sections");

      case Arch is
         when "riscv64-limine" =>
            for Switches ("Ada") use Base_Link_Switches &
               ("-static", "-zmax-page-size=0x1000", "-Wl,-melf64lriscv",
                "-Wl,--no-relax");
         when "x86_64-limine" =>
            for Switches ("Ada") use Base_Link_Switches &
               ("-static", "-zmax-page-size=0x1000",
                "-Wl,--undefined=multiboot2,-zmuldefs");
      end case;
   end Linker;
end Ironclad;
