project Test_Harness_RV64 is

   for Source_Dirs use ("tests/riscv64");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";

   for Main use ("test-harness.adb");

   package Compiler is
      for Switches ("Ada") use ("-gnat2012");
   end Compiler;

   package Builder is
      for Executable ("test-harness.adb") use "test-harness";
   end Builder;

   package Ide is
      for Integrated_Tools use ("GNAT", "GPS");
   end Ide;

   for Languages use ("Ada");

   package Linker is
      for Default_Switches ("Ada") use ("-launit");
   end Linker;

end Test_Harness_RV64;